{
    "name": "postitapp",
    "version": "1.0.0",
    "description": "PostItApp is a simple application that allows friends and colleagues create groups for notifications.",
    "main": "index.js",
    "scripts": {
        "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
        "start:dev": "webpack-dev-server --inline --content-base Client/ --history-api-fallback",
        "start:prod": "npm run build && node serve.index.js",
        "build:client": "webpack",
        "build:server": "webpack --config webpack.serve.config.js",
        "build": "npm run build:client && npm run build:serve"
    },
    "author": "Qudus YEKEEN",
    "license": "ISC",
    "dependencies": {
        "babel-cli": "^6.24.1",
        "body-parser": "^1.17.2",
        "compression": "^1.6.2",
        "cookie-parser": "^1.4.3",
        "dotenv": "^4.0.0",
        "express": "^4.15.3",
        "express-session": "^1.15.3",
        "firebase": "^4.0.0",
        "if-env": "^1.0.0",
        "morgan": "^1.8.1",
        "multer": "^1.3.0",
        "react": "^15.5.4",
        "react-dom": "^15.5.4",
        "react-router": "^4.1.1",
        "react-router-dom": "^4.1.1"
    },
    "devDependencies": {
        "babel-core": "^6.24.1",
        "babel-loader": "^7.0.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-watch": "^2.0.6",
        "eslint": "^3.19.0",
        "eslint-config-airbnb": "^8.0.0",
        "eslint-plugin-import": "^1.6.1",
        "eslint-plugin-jsx-a11y": "^2.1.0",
        "eslint-plugin-react": "^6.1.2",
        "browserify": "*",
        "flux": "*",
        "webpack": "^2.5.1",
        "vinyl-source-stream": "*",
        "object-assign": "*",
        "webpack-dev-server": "^2.4.5"
    }
}
